@model ControleContas.Application.ViewModels.LancamentosViewModel

@{
    ViewData["Title"] = "Cadastrar lançamentos";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCompra" class="control-label"></label>
                <input asp-for="DataCompra" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrimeiraParcela" class="control-label"></label>
                <input asp-for="DataPrimeiraParcela" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control" />
                <span asp-validation-for="DataPrimeiraParcela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" type="text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParcelasTotal" class="control-label"></label>
                <input asp-for="ParcelasTotal" class="form-control" />
                <span asp-validation-for="ParcelasTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContasId" class="control-label"></label>
                <select asp-for="ContasId" asp-items="@ViewBag.ContasId" class="form-control"></select>
                <span asp-validation-for="ContasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriasId" class="control-label"></label>
                <select asp-for="CategoriasId" asp-items="@ViewBag.CategoriasId" class="form-control"></select>
                <span asp-validation-for="CategoriasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" name="Cadastrar" id="Cadastrar" class="btn btn-primary"><span>Cadastrar <i class="bi bi-plus-circle"></i></span></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>
