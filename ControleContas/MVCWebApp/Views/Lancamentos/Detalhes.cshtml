@model ControleContas.Application.ViewModels.LancamentosViewModel

@{
    ViewData["Title"] = "Detalhes do Lançamento";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCompra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCompra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrimeiraParcela)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPrimeiraParcela)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParcelasTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParcelasTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contas.ContasTipos.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contas.ContasTipos.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contas.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contas.Nome)
            <div style="width: 15px;height:15px;border:1px solid #000;background-color:@Model.Contas.Cor;"></div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categorias.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categorias.Nome)
            <div style="width: 15px;height:15px;border:1px solid #000;background-color:@Model.Categorias.Cor;"></div>
        </dd>
    </dl>
</div>
<h2>Parcelas:</h2>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead style="font-weight: bold;">
                    <tr>
                        <th>Nro. Parcela</th>
                        <th>Valor Parcela</th>
                        <th>Cobrança</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Parcelas.OrderBy(x => x.ParcelaNumero))
                    {
                        <tr>
                            <td>
                                <strong>@item.ParcelaNumero</strong>
                            </td>
                            <td>
                                @item.ParcelaValor.ToString("C")
                            </td>
                            <td>
                                @item.MesCobranca.ToString("D2")/@item.AnoCobranca.ToString("D4")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }) |
    <a asp-action="Index">Voltar à lista</a>
</div>
