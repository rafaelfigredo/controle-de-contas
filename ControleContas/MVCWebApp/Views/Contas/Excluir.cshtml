@model ControleContas.Application.ViewModels.ContasViewModel

@{
    ViewData["Title"] = "Excluir Tipo de Conta";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h3>Você tem certeza de que deseja excluir essa Conta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContasTipos.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContasTipos.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VencimentoDia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VencimentoDia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class="col-sm-10">
            <div style="width: 15px;height:15px;border:1px solid #000;background-color:#@Model.Cor;"></div>
        </dd>
    </dl>

    <form asp-action="Excluir">
        <button type="submit" name="Excluir" id="Excluir" class="btn btn-danger"><span>Excluir <i class="bi bi-trash"></i></span></button>
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
