@model ControleContas.Application.ViewModels.CategoriasViewModel

@{
    ViewData["Title"] = "Excluir Categoria";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h3>Você tem certeza de que deseja excluir essa categoria?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
    </dl>

    <form asp-action="Excluir">
        <button type="submit" name="Excluir" id="Excluir" class="btn btn-danger"><span>Excluir <i class="bi bi-trash"></i></span></button>
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
